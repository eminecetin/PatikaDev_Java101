package KDVHesabi;
import java.util.Scanner;
public class KDVHesabi {

	public static void main(String[] args) {

		Scanner input=new Scanner(System.in);
		
		System.out.println("Para Degerini Giriniz: ");
		double para;
		para=input.nextDouble();
		
		double KDVsiz=para;
		System.out.println("KDV'siz tutar: "+KDVsiz);
		double KDVli=(para+(para*0.18));
		System.out.println("KDV'li tutar: "+KDVli);
		double KDVTutari=para*0.18;
		System.out.println("KDV tutari: "+KDVTutari);
		
		
	}

}
